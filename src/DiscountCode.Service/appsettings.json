{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "TBD",
    "RedisConnection": "TBD"
  },
  "BackgroundService": {
    "MinAvailableCodeCount": 10000,
    "CodeGenerationBatchSize": 5000,
    "CodeGenerationIntervalSeconds": 30
  },
  "DiscountCode": {
    "CodeLength": 8,
    "MaxCodesPerRequest": 2000,
    "CodeCacheExpirationDays": 1,
    "NotFoundCacheExpirationMinutes": 30,
    "UsedCodeCacheExpirationDays": 1
  }
}
