{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Port=5432;Username=postgres;Password=YourStrong@Passw0rd;Database=discountdb",
    "RedisConnection": "redis:6379"
  },
  "BackgroundService": {
    "MinAvailableCodeCount": 10000,
    "CodeGenerationBatchSize": 10,
    "CodeGenerationIntervalSeconds": 300
  },
  "DiscountCode": {
    "MaxCodesPerRequest": 2000,
    "CodeCacheExpirationDays": 1,
    "NotFoundCacheExpirationMinutes": 30,
    "UsedCodeCacheExpirationDays": 1
  }
}
